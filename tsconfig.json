{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true
    },
    "include": ["bin/**/*", "types/**/*", "utils/**/*", "lib/command", "bin/index.ts"]
}
